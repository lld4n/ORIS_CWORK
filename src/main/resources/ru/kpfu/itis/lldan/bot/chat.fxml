<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.kpfu.itis.lldan.bot.ChatController">
    <VBox>
        <TextArea fx:id="chatArea" editable="false">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </TextArea>
        <HBox prefHeight="21.0" spacing="40.0">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
            <TextField fx:id="inputField" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefHeight="26.0"
                       prefWidth="425.0"/>
            <Button onAction="#handleUserInput" text="Send"/>
        </HBox>
    </VBox>
</AnchorPane>
